    <div class="row">
      <div class="col-lg-7 col-sm-12"> 
    <div class="jumbotron">
      <center><h3>Add A Color</h3></center>
        <form id="colorCode" action="/colors/create" method="POST">
          <div class="messages text-danger d-none">This color already exists</div>
          <div class="controls">
            <!-- <div class="form-row"> -->
              <div class="form-group col-md-12">
                <label for="color">Color<i class="text-danger">*</i></label>
                <input type="text" class="form-control" name="colorName" id="color" placeholder="Color" required="required" data-error="Color is required.">
                <div class="help-block with-errors"></div>
              </div>
            <!-- </div> -->
                <!-- <div class="form-row"> -->
                <div class="form-group col-md-12">
                      <label for="category">Category<i class="text-danger">*</i></label>
                      <input type="text" class="form-control" name="category" id="category" placeholder="Category" required="required" data-error="Category is required.">
                      <div class="help-block with-errors"></div>
                    </div>
                  <!-- </div> -->
              
                  <!-- <div class="form-row"> -->
                  <div class="form-group col-md-12">
                      <label for="colorType">Color Type<i class="text-danger">*</i></label>
                      <select class="form-control" name="colorType" id="colorType">
                        <option value="Primary">Primary</option>
                        <option value="Secondary">Secondary</option>
                        <option selected value="Tertiary">Tertiary</option>
                        <option value="None">None</option>
                        </select>
                        <div class="help-block with-errors"></div>
                    </div>
                  <!-- </div> -->
                          
          <!-- <div class="form-row"> -->
          <div class="form-group col-md-12">
              <label for="hex">Hex<i class="text-danger">*</i></label>
              <input type="text" class="form-control" name="hex" id="hex" value="#" placeholder="hex" required="required" data-error="Hex is required.">
              <div class="help-block with-errors"></div>
            </div>
          <!-- </div> -->
          <button type="submit" class="btn btn-secondary float-right mr-3" onclick="isUnique()">Submit</button>
        </div>
        </form>
    </div>
    </div>
      <div class="col-lg-5 col-sm-12">
        <canvas id="myChart" width="200" height="200"></canvas>
      </div>
    </div>