<div class="jumbotron pt-4">
  <h3 class="text-dark">Covid-19 Data Portal</h3>
  <div>
    <form>
      <div class="input-group mb-3">
        <input
          type="text"
          id="countryCodes"
          class="form-control countryCodes"
          placeholder="Worldwide"
          aria-label="Search"
          aria-describedby="Search"
        />
        <div class="input-group-append">
          <button
            class="btn btn-danger"
            type="button"
            id="goSearch"
            onclick="loadCovidData()"
          >Get Data</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="jumbotron pt-4 pb-4 d-none" id="covidResults">
  <div class="modal-dialogg">
    <div class="modal-contentt" style="width: 700px;">
      <div class="modal-headerr">
        <h4 id="resultsHeader" class="text-dark"></h4>
      </div>
      <div class="modal-bodyy pt-0 pr-0">
        <form>
          <div class="form-group row mb-0">
            <label for="confirmed" class="col-3 col-form-label">Cases:</label>
            <div class="col-7">
              <span
                class="form-control-plaintext text-danger"
                id="confirmed"
              ></span>
            </div>
          </div>
          <div class="form-group row mb-0">
            <label
              for="recovered"
              class="col-3 col-form-label"
            >Recovered:</label>
            <div class="col-7">
              <span
                class="form-control-plaintext text-danger"
                id="recovered"
              ></span>
            </div>
          </div>
          <div class="form-group row mb-0">
            <label for="critical" class="col-3 col-form-label">Critical:</label>
            <div class="col-7">
              <span
                class="form-control-plaintext text-danger"
                id="critical"
              ></span>
            </div>
          </div>
          <div class="form-group row mb-0">
            <label for="deaths" class="col-3 col-form-label">Deaths:</label>
            <div class="col-7">
              <span
                class="form-control-plaintext text-danger"
                id="deaths"
              ></span>
            </div>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>