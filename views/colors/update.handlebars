<div class="jumbotron">
  <h3>Sentinel Colors Edit</h3>
    <form id="colorCode" action="/colors/{{id}}/update?_method=PUT" method="POST">
        <!-- <div class="form-row"> -->
          <div class="form-group col-md-6">
            <label for="inputEmail4">Color</label>
            <input type="text" class="form-control" name="colorName" id="color" value="{{colorName}}" placeholder="Color">
          </div>
        <!-- </div> -->

            <!-- <div class="form-row"> -->
            <div class="form-group col-md-6">
                  <label for="inputEmail4">Category</label>
                  <input type="text" class="form-control" name="category" id="category" value="{{category}}" placeholder="Category">
                </div>
              <!-- </div> -->
          
              <!-- <div class="form-row"> -->
              <div class="form-group col-md-6">
                  <label for="colorType">Color Type</label>
                  <select class="form-control" name="colorType" id="colorType">
                    <option value="Primary">Primary</option>
                    <option value="Secondary">Secondary</option>
                    <option selected value="Tertiary">Tertiary</option>
                    <option value="None">None</option>
                    </select>
                </div>
              <!-- </div> -->
                      
              <!-- <div class="form-row"> -->
              <div class="form-group col-md-6">
                  <label for="inputEmail4">Hex</label>
                  <input type="text" class="form-control" name="hex" id="hex" value="{{hex}}" placeholder="hex">
                </div>
              <!-- </div> -->
              <button type="submit" class="btn btn-primary">Save Color</button>
    </form>
</div>
