 <div class="jumbotron">
      <h3>Color Lab DB</h3>
      <div>
        <div id="noColor"></div>
        <div class="tableDiv"></div>
        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">S/No</th>
                <th scope="col">Color Name</th>
                <th scope="col">Category</th>
                <th scope="col">Type</th>
                <th scope="col">Hex</th>
                </tr>
            </thead>
            <tbody class="colorsTableBody">
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{colorName}}</td>
                    <td>{{category}}</td>
                    <td>{{colorType}}</td>
                    <td style="background-color: {{hex}}">{{hex}}</td>
                    <td>
						<a href="/colors/{{id}}/update" class="btn btn-warning btn-sm">Edit</a>
						<a href="/colors/{{id}}/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Color?')">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
      </div>
    </div>